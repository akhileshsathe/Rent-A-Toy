<?xml version="1.0" encoding="utf-8"?>




    <LinearLayout   xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdminManageToys"
        android:orientation="vertical"
        android:background="@color/secondary"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Manage Toys"
            android:textColor="@color/primaryText"
            android:textSize="50sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Admin Dashboard"
            android:textColor="@color/primary"
            android:gravity="center"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:gravity="center_horizontal"
            android:layout_gravity="center"
            android:orientation="vertical">
            <androidx.cardview.widget.CardView
                app:cardCornerRadius="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="120dp">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/istockphoto_1412025000_170667a"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#66333333"
                />
                <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddToy"
                android:layout_width="250dp"
                android:layout_height="120dp"
                android:drawableTop="@drawable/outline_add_24"
                android:drawableTint="@color/primaryText"
                android:text="Add Toy"
                android:backgroundTint="#0000"
                android:textSize="24dp"
                app:cornerRadius="10dp"
                android:textColor="@color/primaryText"
                />
            </FrameLayout>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginTop="100dp"
                app:cardCornerRadius="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_width="250dp"
                    android:layout_height="120dp">

                    <ImageView
                        android:layout_width="250dp"
                        android:layout_height="120dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/istockphoto_1474775270_170667a"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#66333333"
                        />
                    <com.google.android.material.button.MaterialButton
                        android:drawableTop="@drawable/baseline_format_list_bulleted_24"
                        android:drawableTint="@color/primaryText"
                        android:layout_width="250dp"
                        android:layout_height="120dp"
                        android:id="@+id/btnViewToy"
                        android:text="View Toys"
                        android:textSize="24dp"
                        app:cornerRadius="10dp"

                        android:textColor="@color/primaryText"
                        android:backgroundTint="#0000"
                        />
                </FrameLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

    </LinearLayout>

