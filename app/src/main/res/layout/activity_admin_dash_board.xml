                    android:textColor="@color/primaryText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For Infants (0-12 Months):"
                    android:textColor="@color/primaryText"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For Toddlers (1-3 years):"
                    android:textColor="@color/primaryText"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For Preschoolers (3-5 years)"
                    android:textColor="@color/primaryText"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="For School-Age (6-12 years)"
                    android:textColor="@color/primaryText"
                    />
                <TextView
